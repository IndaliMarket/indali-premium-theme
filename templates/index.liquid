<section class="section section--white">
 <div class="container">
   <h2 class="section-title">Best Sellers</h2>
   <p class="section-subtitle">
     Our most popular products, loved by customers for their exceptional quality and value
   </p>
   
   <div class="products-grid">
     {% if collections.all.products.size > 0 %}
       {% for product in collections.all.products limit: 4 %}
         <div class="product-card">
           {% if product.featured_image %}
             <div class="product-image">
               <img src="{{ product.featured_image | img_url: '600x400' }}" alt="{{ product.title }}">
             </div>
           {% else %}
             <div class="product-image placeholder">
               <span class="placeholder-icon">📦</span>
             </div>
           {% endif %}
           
           <div class="product-info">
             <h3 class="product-title">{{ product.title }}</h3>
             <div class="product-price">{{ product.price | money }}</div>
             
             <form action="/cart/add" method="post">
               <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
               <button type="submit" class="add-to-cart-btn">
                 Quick Add to Cart
               </button>
             </form>
           </div>
         </div>
       {% endfor %}
     {% else %}
       <div class="product-card">
         <div class="product-image placeholder">
           <span class="placeholder-icon">📱</span>
         </div>
         <div class="product-info">
           <h3 class="product-title">DM66 Smart Watch</h3>
           <div class="product-price">R 200.00</div>
           <button class="add-to-cart-btn">Quick Add to Cart</button>
         </div>
       </div>
       
       <div class="product-card">
         <div class="product-image placeholder">
           <span class="placeholder-icon">🏺</span>
         </div>
         <div class="product-info">
           <h3 class="product-title">Premium Spice Set</h3>
           <div class="product-price">R 478.00</div>
           <button class="add-to-cart-btn">Quick Add to Cart</button>
         </div>
       </div>
       
       <div class="product-card">
         <div class="product-image placeholder">
           <span class="placeholder-icon">🌿</span>
         </div>
         <div class="product-info">
           <h3 class="product-title">Wellness Chest Rub</h3>
           <div class="product-price">R 912.00</div>
           <button class="add-to-cart-btn">Quick Add to Cart</button>
         </div>
       </div>
       
       <div class="product-card">
         <div class="product-image placeholder">
           <span class="placeholder-icon">💡</span>
         </div>
         <div class="product-info">
           <h3 class="product-title">LED Solar Lamp Set</h3>
           <div class="product-price">R 250.00</div>
           <button class="add-to-cart-btn">Quick Add to Cart</button>
         </div>
       </div>
     {% endif %}
   </div>
 </div>
</section>
