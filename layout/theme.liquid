<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#f1c40f">
  
  <title>
    {{ page_title }}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {{ content_for_header }}

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
    
    :root {
      --primary: #f1c40f;
      --primary-dark: #f39c12;
      --secondary: #e67e22;
      --accent: #3498db;
      --dark: #2c3e50;
      --darker: #1a252f;
      --white: #ffffff;
      --light-gray: #f8f9fa;
      --medium-gray: #ecf0f1;
      --text-light: #7f8c8d;
      --border-light: rgba(0, 0, 0, 0.08);
      --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
      --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.12);
      --shadow-strong: 0 15px 50px rgba(0, 0, 0, 0.15);
      --gradient-gold: linear-gradient(135deg, #f1c40f 0%, #f39c12 50%, #e67e22 100%);
      --gradient-subtle: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
      font-size: 16px;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--white);
      color: var(--dark);
      line-height: 1.6;
      overflow-x: hidden;
      font-weight: 400;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    /* Minimalist Header */
    .header {
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 10000;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      padding: 1.5rem 0;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
    }

    .header.scrolled {
      background: rgba(255, 255, 255, 0.98);
      box-shadow: var(--shadow-soft);
      padding: 1rem 0;
      border-bottom: 1px solid var(--border-light);
    }

    .header__inner {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 2rem;
    }

    .logo {
      display: flex;
      align-items: center;
      text-decoration: none;
      transition: transform 0.3s ease;
    }

    .logo:hover {
      transform: scale(1.02);
    }

    .logo img {
      height: 45px;
      width: auto;
      filter: drop-shadow(0 2px 8px rgba(241, 196, 15, 0.2));
    }

    .logo-text {
      font-size: 2.2rem;
      font-weight: 800;
      background: var(--gradient-gold);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      letter-spacing: -0.02em;
      margin-left: 0.5rem;
    }

    .nav {
      display: flex;
      gap: 3rem;
      list-style: none;
    }

    .nav a {
      color: var(--dark);
      text-decoration: none;
      font-weight: 500;
      font-size: 1rem;
      position: relative;
      transition: all 0.3s ease;
      padding: 0.5rem 0;
    }

    .nav a::before {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      height: 2px;
      background: var(--gradient-gold);
      border-radius: 2px;
      transition: width 0.3s ease;
    }

    .nav a:hover::before {
      width: 100%;
    }

    .nav a:hover {
      color: var(--primary-dark);
    }

    .cart-link {
      background: var(--white);
      border: 2px solid var(--border-light);
      border-radius: 50px;
      padding: 0.8rem 1.5rem;
      color: var(--dark);
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
      box-shadow: var(--shadow-soft);
      display: flex;
      align-items: center;
      gap: 0.8rem;
    }

    .cart-link:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-medium);
      border-color: var(--primary);
      background: var(--gradient-gold);
      color: white;
    }

    /* Clean Hero Section */
    .hero-section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      background: var(--gradient-subtle);
      position: relative;
      overflow: hidden;
      padding: 8rem 0 4rem;
    }

    .hero-pattern {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: radial-gradient(circle at 25% 25%, rgba(241, 196, 15, 0.1) 0%, transparent 50%),
                        radial-gradient(circle at 75% 75%, rgba(243, 156, 18, 0.08) 0%, transparent 50%);
      z-index: 1;
    }

    .hero-content {
      flex: 1;
      z-index: 3;
      max-width: 700px;
      animation: slideInUp 1s ease-out;
    }

    .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.8rem;
      background: var(--white);
      border: 1px solid var(--border-light);
      border-radius: 50px;
      padding: 0.8rem 2rem;
      color: var(--dark);
      font-size: 0.95rem;
      font-weight: 600;
      margin-bottom: 2.5rem;
      animation: fadeInUp 1s ease-out 0.2s both;
      box-shadow: var(--shadow-soft);
    }

    .hero-title {
      font-size: clamp(3.5rem, 8vw, 6rem);
      font-weight: 900;
      line-height: 1.05;
      margin-bottom: 2rem;
      color: var(--dark);
      animation: slideInUp 1s ease-out 0.4s both;
      letter-spacing: -0.03em;
    }

    .hero-title .accent {
      background: var(--gradient-gold);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .hero-description {
      font-size: 1.3rem;
      color: var(--text-light);
      margin-bottom: 3.5rem;
      line-height: 1.7;
      animation: fadeInUp 1s ease-out 0.6s both;
      font-weight: 400;
      max-width: 600px;
    }

    .cta-group {
      display: flex;
      gap: 1.5rem;
      animation: fadeInUp 1s ease-out 0.8s both;
    }

    .cta-button {
      display: inline-flex;
      align-items: center;
      gap: 1rem;
      background: var(--gradient-gold);
      color: white;
      padding: 1.3rem 3rem;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 700;
      font-size: 1.1rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: var(--shadow-medium);
      position: relative;
      overflow: hidden;
    }

    .cta-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.6s ease;
    }

    .cta-button:hover::before {
      left: 100%;
    }

    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: var(--shadow-strong);
    }

    .cta-secondary {
      background: var(--white);
      color: var(--dark);
      border: 2px solid var(--border-light);
      box-shadow: var(--shadow-soft);
    }

    .cta-secondary:hover {
      background: var(--dark);
      color: white;
      border-color: var(--dark);
    }

    /* Clean Sections */
    .section {
      padding: 8rem 0;
      position: relative;
    }

    .section--gray {
      background: var(--light-gray);
    }

    .section-title {
      text-align: center;
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 800;
      margin-bottom: 1.5rem;
      color: var(--dark);
      letter-spacing: -0.02em;
      line-height: 1.1;
    }

    .section-subtitle {
      text-align: center;
      font-size: 1.2rem;
      color: var(--text-light);
      margin-bottom: 4rem;
      font-weight: 400;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Modern Category Cards */
    .categories-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }

    .category-card {
      background: var(--white);
      border: 1px solid var(--border-light);
      border-radius: 20px;
      padding: 3rem 2.5rem;
      text-align: center;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      position: relative;
      overflow: hidden;
      box-shadow: var(--shadow-soft);
    }

    .category-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(241, 196, 15, 0.05), transparent);
      transition: left 0.6s ease;
    }

    .category-card:hover::before {
      left: 100%;
    }

    .category-card:hover {
      transform: translateY(-8px);
      box-shadow: var(--shadow-strong);
      border-color: var(--primary);
    }

    .category-icon {
      font-size: 4rem;
      margin-bottom: 2rem;
      display: block;
      transition: transform 0.3s ease;
    }

    .category-card:hover .category-icon {
      transform: scale(1.1);
    }

    .category-card h3 {
      font-size: 1.6rem;
      font-weight: 700;
      color: var(--dark);
      margin-bottom: 1rem;
    }

    .category-card p {
      color: var(--text-light);
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .category-link {
      display: inline-flex;
      align-items: center;
      gap: 0.8rem;
      background: var(--gradient-gold);
      color: white;
      padding: 0.9rem 2rem;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(241, 196, 15, 0.3);
    }

    .category-link:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(241, 196, 15, 0.4);
    }

    /* Clean Product Cards */
    .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 2.5rem;
      margin-top: 3rem;
    }

    .product-card {
      background: var(--white);
      border: 1px solid var(--border-light);
      border-radius: 20px;
      overflow: hidden;
      box-shadow: var(--shadow-soft);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
    }

    .product-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-strong);
      border-color: var(--primary);
    }

    .product-image {
      height: 250px;
      overflow: hidden;
      position: relative;
      background: var(--light-gray);
    }

    .product-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
    }

    .product-card:hover .product-image img {
      transform: scale(1.05);
    }

    .product-image.placeholder {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .placeholder-icon {
      font-size: 4rem;
      opacity: 0.3;
      color: var(--text-light);
    }

    .product-info {
      padding: 2rem;
    }

    .product-title {
      font-size: 1.3rem;
      font-weight: 600;
      color: var(--dark);
      margin-bottom: 1rem;
      line-height: 1.3;
    }

    .product-price {
      font-size: 1.8rem;
      font-weight: 700;
      background: var(--gradient-gold);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1.5rem;
    }

    .add-to-cart-btn {
      width: 100%;
      background: var(--gradient-gold);
      color: white;
      border: none;
      padding: 1rem;
      border-radius: 15px;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(241, 196, 15, 0.3);
    }

    .add-to-cart-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(241, 196, 15, 0.4);
    }

    /* Clean Footer */
    .footer {
      background: var(--dark);
      color: white;
      padding: 4rem 0 2rem;
      text-align: center;
    }

    /* Animations */
    @keyframes slideInUp {
      from { opacity: 0; transform: translateY(50px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Responsive */
    @media (max-width: 768px) {
      .nav { display: none; }
      .hero-title { font-size: 2.5rem; }
      .container { padding: 0 1rem; }
      .categories-grid, .products-grid { grid-template-columns: 1fr; }
      .section { padding: 5rem 0; }
      .cta-group { flex-direction: column; }
    }
  </style>
</head>

<body>
  <header class="header" id="header">
    <div class="header__inner">
      <a href="{{ routes.root_url }}" class="logo">
        <span class="logo-text">{{ shop.name }}</span>
      </a>
      <nav>
        <ul class="nav">
          <li><a href="{{ routes.root_url }}">Home</a></li>
          <li><a href="{{ routes.all_products_collection_url }}">Shop</a></li>
          <li><a href="/collections">Categories</a></li>
          <li><a href="/pages/contact">Contact</a></li>
        </ul>
      </nav>
      <a href="{{ routes.cart_url }}" class="cart-link">
        <span>ðŸ›’</span>
        <span>Cart</span>
      </a>
    </div>
  </header>

  <main>
    {{ content_for_layout }}
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }} - Premium Gadgets & Lifestyle Essentials</p>
    </div>
  </footer>

  <script>
    window.addEventListener('scroll', () => {
      const header = document.getElementById('header');
      if (window.scrollY > 50) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });

    document.addEventListener('DOMContentLoaded', function() {
      const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
      
      addToCartButtons.forEach(button => {
        button.addEventListener('click', function(e) {
          const form = this.closest('form');
          if (form) {
            e.preventDefault();
            
            const originalText = this.textContent;
            this.style.background = 'linear-gradient(135deg, #27ae60, #2ecc71)';
            this.textContent = 'Added!';
            this.disabled = true;
            
            setTimeout(() => {
              this.style.background = '';
              this.textContent = originalText;
              this.disabled = false;
            }, 2000);
          }
        });
      });
    });
  </script>
</body>
</html>
