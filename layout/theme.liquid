<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.primary_color | default: '#f1c40f' }}">
  
  <title>
    {{ page_title }}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {{ content_for_header }}

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
    
    :root {
      --primary: {{ settings.primary_color | default: '#f1c40f' }};
      --secondary: {{ settings.secondary_color | default: '#f39c12' }};
      --accent: #e67e22;
      --dark: #2c3e50;
      --white: #ffffff;
      --light-gray: #f8f9fa;
      --text-light: #7f8c8d;
      --border-light: rgba(0, 0, 0, 0.08);
      --shadow-soft: 0 2px 10px rgba(0, 0, 0, 0.05);
      --shadow-medium: 0 4px 15px rgba(0, 0, 0, 0.08);
      --shadow-strong: 0 8px 25px rgba(0, 0, 0, 0.12);
      --gradient-gold: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 50%, var(--accent) 100%);
      --gradient-subtle: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
      font-size: 14px;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--white);
      color: var(--dark);
      line-height: 1.5;
      overflow-x: hidden;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1.5rem;
    }

    /* Smaller Header */
    .header {
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 10000;
      transition: all 0.3s ease;
      padding: 0.8rem 0;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(15px);
      border-bottom: 1px solid var(--border-light);
    }

    .header.scrolled {
      background: rgba(255, 255, 255, 0.98);
      box-shadow: var(--shadow-soft);
      padding: 0.6rem 0;
    }

    .header__inner {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 1.5rem;
    }

    .logo {
      display: flex;
      align-items: center;
      text-decoration: none;
      transition: transform 0.3s ease;
    }

    .logo:hover {
      transform: scale(1.02);
    }

    .logo img {
      height: 35px;
      width: auto;
      max-height: 40px;
    }

    .logo-text {
      font-size: 1.6rem;
      font-weight: 700;
      background: var(--gradient-gold);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      letter-spacing: -0.01em;
      {% if settings.logo %}margin-left: 0.4rem;{% endif %}
    }

    .nav {
      display: flex;
      gap: 2rem;
      list-style: none;
    }

    .nav a {
      color: var(--dark);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.9rem;
      position: relative;
      transition: all 0.3s ease;
      padding: 0.4rem 0;
    }

    .nav a::before {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      height: 2px;
      background: var(--gradient-gold);
      border-radius: 2px;
      transition: width 0.3s ease;
    }

    .nav a:hover::before {
      width: 100%;
    }

    .nav a:hover {
      color: var(--secondary);
    }

    .cart-link {
      background: var(--white);
      border: 1px solid var(--border-light);
      border-radius: 25px;
      padding: 0.6rem 1.2rem;
      color: var(--dark);
      text-decoration: none;
      font-weight: 500;
      font-size: 0.9rem;
      transition: all 0.3s ease;
      box-shadow: var(--shadow-soft);
      display: flex;
      align-items: center;
      gap: 0.6rem;
    }

    .cart-link:hover {
      transform: translateY(-1px);
      box-shadow: var(--shadow-medium);
      border-color: var(--primary);
      background: var(--gradient-gold);
      color: white;
    }

    /* Smaller Hero Section */
    .hero-section {
      min-height: 70vh;
      display: flex;
      align-items: center;
      background: var(--gradient-subtle);
      position: relative;
      overflow: hidden;
      padding: 6rem 0 3rem;
      margin-top: 60px;
    }

    .hero-pattern {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: radial-gradient(circle at 25% 25%, rgba(241, 196, 15, 0.08) 0%, transparent 50%),
                        radial-gradient(circle at 75% 75%, rgba(243, 156, 18, 0.06) 0%, transparent 50%);
      z-index: 1;
    }

    .hero-content {
      flex: 1;
      z-index: 3;
      max-width: 600px;
      animation: slideInUp 0.8s ease-out;
    }

    .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.6rem;
      background: var(--white);
      border: 1px solid var(--border-light);
      border-radius: 25px;
      padding: 0.6rem 1.5rem;
      color: var(--dark);
      font-size: 0.85rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
      animation: fadeInUp 0.8s ease-out 0.2s both;
      box-shadow: var(--shadow-soft);
    }

    .hero-title {
      font-size: clamp(2.5rem, 6vw, 4rem);
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 1.5rem;
      color: var(--dark);
      animation: slideInUp 0.8s ease-out 0.4s both;
      letter-spacing: -0.02em;
    }

    .hero-title .accent {
      background: var(--gradient-gold);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .hero-description {
      font-size: 1.1rem;
      color: var(--text-light);
      margin-bottom: 2.5rem;
      line-height: 1.6;
      animation: fadeInUp 0.8s ease-out 0.6s both;
      max-width: 500px;
    }

    .cta-group {
      display: flex;
      gap: 1rem;
      animation: fadeInUp 0.8s ease-out 0.8s both;
    }

    .cta-button {
      display: inline-flex;
      align-items: center;
      gap: 0.8rem;
      background: var(--gradient-gold);
      color: white;
      padding: 1rem 2rem;
      border-radius: 30px;
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: var(--shadow-medium);
    }

    .cta-button:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-strong);
    }

    .cta-secondary {
      background: var(--white);
      color: var(--dark);
      border: 1px solid var(--border-light);
    }

    .cta-secondary:hover {
      background: var(--dark);
      color: white;
      border-color: var(--dark);
    }

    /* Smaller Sections */
    .section {
      padding: 4rem 0;
    }

    .section--gray {
      background: var(--light-gray);
    }

    .section-title {
      text-align: center;
      font-size: clamp(2rem, 4vw, 2.8rem);
      font-weight: 700;
      margin-bottom: 1rem;
      color: var(--dark);
      letter-spacing: -0.01em;
    }

    .section-subtitle {
      text-align: center;
      font-size: 1rem;
      color: var(--text-light);
      margin-bottom: 3rem;
      max-width: 500px;
      margin-left: auto;
      margin-right: auto;
    }

    /* Smaller Category Cards */
    .categories-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .category-card {
      background: var(--white);
      border: 1px solid var(--border-light);
      border-radius: 15px;
      padding: 2rem 1.5rem;
      text-align: center;
      transition: all 0.3s ease;
      cursor: pointer;
      box-shadow: var(--shadow-soft);
    }

    .category-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-strong);
      border-color: var(--primary);
    }

    .category-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      transition: transform 0.3s ease;
    }

    .category-card:hover .category-icon {
      transform: scale(1.1);
    }

    .category-card h3 {
      font-size: 1.2rem;
      font-weight: 600;
      color: var(--dark);
      margin-bottom: 0.8rem;
    }

    .category-card p {
      color: var(--text-light);
      margin-bottom: 1.5rem;
      line-height: 1.5;
      font-size: 0.9rem;
    }

    .category-link {
      display: inline-flex;
      align-items: center;
      gap: 0.6rem;
      background: var(--gradient-gold);
      color: white;
      padding: 0.7rem 1.5rem;
      border-radius: 25px;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.9rem;
      transition: all 0.3s ease;
    }

    .category-link:hover {
      transform: translateY(-1px);
    }

    /* Smaller Product Cards */
    .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .product-card {
      background: var(--white);
      border: 1px solid var(--border-light);
      border-radius: 15px;
      overflow: hidden;
      box-shadow: var(--shadow-soft);
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-strong);
      border-color: var(--primary);
    }

    .product-image {
      height: 180px;
      overflow: hidden;
      background: var(--light-gray);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .product-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .product-card:hover .product-image img {
      transform: scale(1.05);
    }

    .placeholder-icon {
      font-size: 2.5rem;
      opacity: 0.3;
      color: var(--text-light);
    }

    .product-info {
      padding: 1.5rem;
    }

    .product-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--dark);
      margin-bottom: 0.8rem;
      line-height: 1.3;
    }

    .product-price {
      font-size: 1.4rem;
      font-weight: 700;
      background: var(--gradient-gold);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1rem;
    }

    .add-to-cart-btn {
      width: 100%;
      background: var(--gradient-gold);
      color: white;
      border: none;
      padding: 0.8rem;
      border-radius: 10px;
      font-weight: 600;
      font-size: 0.9rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .add-to-cart-btn:hover {
      transform: translateY(-1px);
    }

    .footer {
      background: var(--dark);
      color: white;
      padding: 3rem 0 1.5rem;
      text-align: center;
    }

    .footer p {
      font-size: 0.9rem;
      opacity: 0.8;
    }

    @keyframes slideInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @media (max-width: 768px) {
      html { font-size: 13px; }
      .nav { display: none; }
      .hero-title { font-size: 2rem; }
      .container { padding: 0 1rem; }
      .categories-grid, .products-grid { grid-template-columns: 1fr; }
      .section { padding: 3rem 0; }
      .cta-group { flex-direction: column; }
      .hero-section { padding: 4rem 0 2rem; }
      .category-card, .product-card { margin: 0 0.5rem; }
    }

    @media (max-width: 480px) {
      .hero-badge { font-size: 0.8rem; padding: 0.5rem 1.2rem; }
      .cta-button { padding: 0.8rem 1.5rem; font-size: 0.9rem; }
      .category-card { padding: 1.5rem 1rem; }
      .product-image { height: 150px; }
    }
 
  /* MINIMAL IMAGE FIX - Safe approach */
img[src*="300x200"] {
    width: 100%;
    height: 200px;
    object-fit: cover;
    object-position: center;
    border-radius: 4px;
    transition: transform 0.3s ease;
}

img[src*="300x200"]:hover {
    transform: scale(1.02);
}
  
  </style>

<style>
/* PRODUCT IMAGE FIX - All images sitewide */
img[src*="indali.co.za/cdn/shop/files"][src*="300x200"] {
    width: 100% !important;
    height: 200px !important;
    object-fit: cover !important;
    object-position: center !important;
    border-radius: 4px !important;
    display: block !important;
    max-width: 100% !important;
    transition: transform 0.3s ease !important;
}

img[src*="indali.co.za/cdn/shop/files"][src*="300x200"]:hover {
    transform: scale(1.02) !important;
}
</style>

</head>

<body>
  <header class="header" id="header">
    <div class="header__inner">
      <a href="{{ routes.root_url }}" class="logo">
        {% if settings.logo %}
          <img src="{{ settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
        {% endif %}
        <span class="logo-text">{{ shop.name }}</span>
      </a>
      <nav>
        <ul class="nav">
          <li><a href="{{ routes.root_url }}">Home</a></li>
          <li><a href="{{ routes.all_products_collection_url }}">Shop</a></li>
          <li><a href="/collections">Categories</a></li>
          <li><a href="/pages/contact">Contact</a></li>
        </ul>
      </nav>
      <a href="{{ routes.cart_url }}" class="cart-link">
        <span>🛒</span>
        <span>Cart</span>
      </a>
    </div>
  </header>

  <main>
    {{ content_for_layout }}
  </main>

  <footer class="footer">
    <div class="container">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }} - Premium Gadgets & Lifestyle Essentials</p>
    </div>
  </footer>

  <script>
    window.addEventListener('scroll', () => {
      const header = document.getElementById('header');
      if (window.scrollY > 30) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });

    document.addEventListener('DOMContentLoaded', function() {
      const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
      
      addToCartButtons.forEach(button => {
        button.addEventListener('click', function(e) {
          const form = this.closest('form');
          if (form) {
            e.preventDefault();
            
            const originalText = this.textContent;
            this.style.background = 'linear-gradient(135deg, #27ae60, #2ecc71)';
            this.textContent = 'Added!';
            this.disabled = true;
            
            setTimeout(() => {
              this.style.background = '';
              this.textContent = originalText;
              this.disabled = false;
            }, 2000);
          }
        });
      });
    });
  </script>
</body>
</html>
