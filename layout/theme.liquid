<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="#f39c12">
  
  <title>
    {{ page_title }}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {{ content_for_header }}

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
    
    :root {
      --primary: #f39c12;
      --secondary: #e74c3c;
      --accent: #3498db;
      --success: #2ecc71;
      --dark: #2c3e50;
      --darker: #1a252f;
      --light: #ecf0f1;
      --white: #ffffff;
      --glass-bg: rgba(255, 255, 255, 0.15);
      --glass-border: rgba(255, 255, 255, 0.2);
      --glass-dark: rgba(0, 0, 0, 0.1);
      --shadow-light: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
      --shadow-heavy: 0 25px 50px rgba(0, 0, 0, 0.25);
      --shadow-glow: 0 0 40px rgba(243, 156, 18, 0.3);
      --gradient-primary: linear-gradient(135deg, #f39c12 0%, #e74c3c 100%);
      --gradient-secondary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      --gradient-accent: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      --gradient-success: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%);
      --gradient-bg: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
      font-size: 16px;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--gradient-bg);
      background-attachment: fixed;
      color: var(--dark);
      line-height: 1.6;
      overflow-x: hidden;
      font-weight: 400;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* Advanced Glassmorphism Effects */
    .glass {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid var(--glass-border);
      border-radius: 20px;
      box-shadow: var(--shadow-light);
    }

    .glass-strong {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(30px);
      -webkit-backdrop-filter: blur(30px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: 25px;
      box-shadow: var(--shadow-heavy);
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    /* Ultra-Modern Header */
    .header {
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 10000;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      padding: 1.5rem 0;
    }

    .header.scrolled {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(30px);
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      padding: 1rem 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .header__inner {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 2rem;
    }

    .logo {
      font-size: 2.5rem;
      font-weight: 900;
      background: var(--gradient-primary);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-decoration: none;
      transition: all 0.3s ease;
      letter-spacing: -0.02em;
    }

    .logo:hover {
      transform: scale(1.05);
      filter: drop-shadow(0 0 20px rgba(243, 156, 18, 0.5));
    }

    .nav {
      display: flex;
      gap: 3rem;
      list-style: none;
    }

    .nav a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      font-size: 1.1rem;
      position: relative;
      transition: all 0.3s ease;
      padding: 0.8rem 0;
      letter-spacing: 0.02em;
    }

    .nav a::before {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      height: 3px;
      background: var(--gradient-primary);
      border-radius: 3px;
      transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .nav a:hover::before {
      width: 100%;
    }

    .nav a:hover {
      color: var(--primary);
      text-shadow: 0 0 20px rgba(243, 156, 18, 0.5);
    }

    .header.scrolled .nav a {
      color: var(--dark);
    }

    .header.scrolled .nav a:hover {
      color: var(--primary);
    }

    .cart-link {
      background: var(--glass-bg);
      backdrop-filter: blur(20px);
      border: 1px solid var(--glass-border);
      border-radius: 60px;
      padding: 1rem 2rem;
      color: white;
      text-decoration: none;
      font-weight: 600;
      font-size: 1.1rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: var(--shadow-light);
      display: flex;
      align-items: center;
      gap: 0.8rem;
    }

    .cart-link:hover {
      transform: translateY(-3px);
      box-shadow: var(--shadow-heavy);
      background: rgba(255, 255, 255, 0.3);
      border-color: rgba(255, 255, 255, 0.4);
    }

    .header.scrolled .cart-link {
      background: var(--gradient-primary);
      color: white;
      border-color: transparent;
    }

    /* Revolutionary Hero Section */
    .hero-section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      position: relative;
      overflow: hidden;
      padding: 10rem 0 6rem;
    }

    .hero-particles {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 1;
    }

    .particle {
      position: absolute;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      animation: float 8s ease-in-out infinite;
    }

    .particle:nth-child(1) {
      top: 10%;
      left: 10%;
      width: 4px;
      height: 4px;
      animation-delay: 0s;
    }

    .particle:nth-child(2) {
      top: 20%;
      right: 20%;
      width: 6px;
      height: 6px;
      animation-delay: 1s;
    }

    .particle:nth-child(3) {
      top: 60%;
      left: 15%;
      width: 8px;
      height: 8px;
      animation-delay: 2s;
    }

    .particle:nth-child(4) {
      bottom: 20%;
      right: 15%;
      width: 5px;
      height: 5px;
      animation-delay: 3s;
    }

    .particle:nth-child(5) {
      top: 40%;
      right: 40%;
      width: 3px;
      height: 3px;
      animation-delay: 4s;
    }

    .hero-content {
      flex: 1;
      z-index: 3;
      max-width: 700px;
      animation: slideInUp 1.2s ease-out;
    }

    .hero-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.8rem;
      background: var(--glass-strong);
      backdrop-filter: blur(30px);
      border: 1px solid var(--glass-border);
      border-radius: 60px;
      padding: 0.8rem 2rem;
      color: white;
      font-size: 1rem;
      font-weight: 700;
      margin-bottom: 2.5rem;
      animation: fadeInUp 1.2s ease-out 0.2s both;
      box-shadow: var(--shadow-glow);
      letter-spacing: 0.05em;
      text-transform: uppercase;
    }

    .hero-title {
      font-size: clamp(3.5rem, 10vw, 7rem);
      font-weight: 900;
      line-height: 0.95;
      margin-bottom: 2rem;
      color: white;
      animation: slideInUp 1.2s ease-out 0.4s both;
      letter-spacing: -0.03em;
    }

    .hero-title .accent {
      background: var(--gradient-accent);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      filter: drop-shadow(0 0 30px rgba(240, 147, 251, 0.3));
    }

    .hero-description {
      font-size: 1.4rem;
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 3.5rem;
      line-height: 1.7;
      animation: fadeInUp 1.2s ease-out 0.6s both;
      font-weight: 400;
      max-width: 600px;
    }

    .cta-group {
      display: flex;
      gap: 1.5rem;
      animation: fadeInUp 1.2s ease-out 0.8s both;
    }

    .cta-button {
      display: inline-flex;
      align-items: center;
      gap: 1rem;
      background: var(--gradient-primary);
      color: white;
      padding: 1.5rem 3.5rem;
      border-radius: 60px;
      text-decoration: none;
      font-weight: 700;
      font-size: 1.2rem;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: var(--shadow-heavy);
      position: relative;
      overflow: hidden;
      border: 2px solid transparent;
      letter-spacing: 0.02em;
    }

    .cta-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
      transition: left 0.8s ease;
    }

    .cta-button:hover::before {
      left: 100%;
    }

    .cta-button:hover {
      transform: translateY(-4px) scale(1.02);
      box-shadow: 0 25px 60px rgba(243, 156, 18, 0.4);
      border-color: rgba(255, 255, 255, 0.3);
    }

    .cta-secondary {
      background: var(--glass-strong);
      backdrop-filter: blur(30px);
      border: 2px solid var(--glass-border);
      color: white;
    }

    .cta-secondary:hover {
      background: rgba(255, 255, 255, 0.3);
      border-color: rgba(255, 255, 255, 0.4);
      box-shadow: var(--shadow-heavy);
    }

    /* Advanced Floating Elements */
    .floating-elements {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 2;
    }

    .floating-shape {
      position: absolute;
      opacity: 0.15;
      animation: floatComplex 12s ease-in-out infinite;
      filter: blur(1px);
    }

    .floating-shape:nth-child(1) {
      top: 15%;
      left: 8%;
      width: 120px;
      height: 120px;
      background: var(--gradient-primary);
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
      animation-delay: 0s;
    }

    .floating-shape:nth-child(2) {
      top: 60%;
      right: 12%;
      width: 90px;
      height: 90px;
      background: var(--gradient-accent);
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
      animation-delay: 3s;
    }

    .floating-shape:nth-child(3) {
      bottom: 15%;
      left: 15%;
      width: 140px;
      height: 140px;
      background: var(--gradient-secondary);
      border-radius: 50% 20% 80% 40% / 30% 75% 25% 70%;
      animation-delay: 6s;
    }

    .floating-shape:nth-child(4) {
      top: 35%;
      right: 35%;
      width: 60px;
      height: 60px;
      background: var(--gradient-success);
      border-radius: 70% 30% 30% 70% / 60% 40% 60% 40%;
      animation-delay: 9s;
    }

    /* Ultra-Modern Sections */
    .section {
      padding: 10rem 0;
      position: relative;
    }

    .section--white {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(30px);
      border-top: 1px solid rgba(255, 255, 255, 0.2);
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .section-title {
      text-align: center;
      font-size: clamp(2.5rem, 6vw, 4.5rem);
      font-weight: 900;
      margin-bottom: 1.5rem;
      color: white;
      letter-spacing: -0.02em;
      line-height: 1.1;
    }

    .section--white .section-title {
      color: var(--dark);
    }

    .section-subtitle {
      text-align: center;
      font-size: 1.3rem;
      color: rgba(255, 255, 255, 0.8);
      margin-bottom: 5rem;
      font-weight: 400;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }

    .section--white .section-subtitle {
      color: rgba(44, 62, 80, 0.7);
    }

    /* Revolutionary Category Cards */
    .categories-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2.5rem;
      margin-top: 4rem;
    }

    .category-card {
      background: var(--glass-strong);
      backdrop-filter: blur(30px);
      border: 1px solid var(--glass-border);
      border-radius: 30px;
      padding: 3.5rem 2.5rem;
      text-align: center;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      position: relative;
      overflow: hidden;
      box-shadow: var(--shadow-light);
    }

    .category-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
      transition: left 0.8s ease;
    }

    .category-card:hover::before {
      left: 100%;
    }

    .category-card:hover {
      transform: translateY(-15px) scale(1.03);
      box-shadow: var(--shadow-heavy);
      border-color: rgba(255, 255, 255, 0.4);
      background: rgba(255, 255, 255, 0.3);
    }

    .category-icon {
      font-size: 5rem;
      margin-bottom: 2rem;
      display: block;
      filter: drop-shadow(0 8px 16px rgba(0, 0, 0, 0.3));
      transition: transform 0.4s ease;
    }

    .category-card:hover .category-icon {
      transform: scale(1.1) rotate(5deg);
    }

    .category-card h3 {
      font-size: 1.8rem;
      font-weight: 800;
      color: white;
      margin-bottom: 1.5rem;
      letter-spacing: -0.01em;
    }

    .category-card p {
      color: rgba(255, 255, 255, 0.85);
      margin-bottom: 2.5rem;
      line-height: 1.7;
      font-size: 1.1rem;
    }

    .category-link {
      display: inline-flex;
      align-items: center;
      gap: 0.8rem;
      background: var(--gradient-primary);
      color: white;
      padding: 1rem 2.5rem;
      border-radius: 60px;
      text-decoration: none;
      font-weight: 700;
      transition: all 0.4s ease;
      box-shadow: 0 8px 25px rgba(243, 156, 18, 0.4);
      font-size: 1.1rem;
    }

    .category-link:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(243, 156, 18, 0.6);
    }

    /* Advanced Product Cards */
    .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
      gap: 3rem;
      margin-top: 4rem;
    }

    .product-card {
      background: white;
      border-radius: 30px;
      overflow: hidden;
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      position: relative;
      border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .product-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: var(--gradient-primary);
      opacity: 0;
      transition: opacity 0.4s ease;
      z-index: 1;
      border-radius: 30px;
    }

    .product-card:hover {
      transform: translateY(-20px) scale(1.02);
      box-shadow: 0 30px 80px rgba(0, 0, 0, 0.2);
    }

    .product-image {
      height: 300px;
      overflow: hidden;
      position: relative;
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .product-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }

    .product-card:hover .product-image img {
      transform: scale(1.15);
    }

    .product-image.placeholder {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .placeholder-icon {
      font-size: 5rem;
      opacity: 0.3;
      transition: all 0.4s ease;
    }

    .product-card:hover .placeholder-icon {
      transform: scale(1.2);
      opacity: 0.5;
    }

    .product-info {
      padding: 2.5rem;
      position: relative;
      z-index: 2;
    }

    .product-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--dark);
      margin-bottom: 1.5rem;
      line-height: 1.3;
      letter-spacing: -0.01em;
    }

    .product-price {
      font-size: 2rem;
      font-weight: 800;
      background: var(--gradient-primary);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 2rem;
    }

    .add-to-cart-btn {
      width: 100%;
      background: var(--gradient-primary);
      color: white;
      border: none;
      padding: 1.3rem;
      border-radius: 20px;
      font-weight: 700;
      font-size: 1.1rem;
      cursor: pointer;
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
      box-shadow: 0 8px 25px rgba(243, 156, 18, 0.3);
    }

    .add-to-cart-btn::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 0;
      height: 0;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      transition: all 0.5s ease;
    }

    .add-to-cart-btn:hover::before {
      width: 300px;
      height: 300px;
    }

    .add-to-cart-btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(243, 156, 18, 0.5);
    }

    /* Premium Footer */
    .footer {
      background: linear-gradient(135deg, var(--darker) 0%, var(--dark) 100%);
      color: white;
      padding: 6rem 0 3rem;
      position: relative;
      margin-top: 8rem;
    }

    .footer::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: var(--gradient-primary);
    }

    .footer-content {
      text-align: center;
      font-size: 1.2rem;
      opacity: 0.8;
    }

    /* Revolutionary Animations */
    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(50px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes float {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-20px);
      }
    }

    @keyframes floatComplex {
      0%, 100% {
        transform: translateY(0px) rotateZ(0deg);
      }
      33% {
        transform: translateY(-30px) rotateZ(120deg);
      }
      66% {
        transform: translateY(-15px) rotateZ(240deg);
      }
    }

    /* Ultra-Responsive Design */
    @media (max-width: 768px) {
      .nav {
        display: none;
      }
      
      .hero-title {
        font-size: 2.5rem;
      }
      
      .container {
        padding: 0 1rem;
      }
      
      .categories-grid,
      .products-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
      }
      
      .section {
        padding: 6rem 0;
      }
      
      .cta-group {
        flex-direction: column;
      }
      
      .category-card,
      .product-card {
        margin: 0 1rem;
      }
    }

    @media (max-width: 480px) {
      .hero-badge {
        font-size: 0.9rem;
        padding: 0.6rem 1.5rem;
      }
      
      .cta-button {
        padding: 1.2rem 2.5rem;
        font-size: 1.1rem;
      }
      
      .category-card {
        padding: 2.5rem 1.5rem;
      }
    }
  </style>
</head>

<body>
  <header class="header" id="header">
    <div class="header__inner">
      <a href="{{ routes.root_url }}" class="logo">{{ shop.name }}</a>
      <nav>
        <ul class="nav">
          <li><a href="{{ routes.root_url }}">Home</a></li>
          <li><a href="{{ routes.all_products_collection_url }}">Shop</a></li>
          <li><a href="/collections">Categories</a></li>
          <li><a href="/pages/contact">Contact</a></li>
        </ul>
      </nav>
      <a href="{{ routes.cart_url }}" class="cart-link">
        <span>🛒</span>
        <span>Cart</span>
      </a>
    </div>
  </header>

  <main>
    {{ content_for_layout }}
  </main>

  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. Premium Gadgets & Lifestyle Essentials</p>
      </div>
    </div>
  </footer>

  <script>
    // Advanced header scroll effect
    window.addEventListener('scroll', () => {
      const header = document.getElementById('header');
      if (window.scrollY > 100) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });

    // Smooth scroll for internal links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Advanced add to cart with animations
    document.addEventListener('DOMContentLoaded', function() {
      const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
      
      addToCartButtons.forEach(button => {
        button.addEventListener('click', function(e) {
          const form = this.closest('form');
          if (form) {
            e.preventDefault();
            
            const originalText = this.textContent;
            this.style.background = 'linear-gradient(135deg, #2ecc71, #27ae60)';
            this.innerHTML = '<span style="display: flex; align-items: center; gap: 0.5rem;"><span>✓</span> Adding...</span>';
            this.disabled = true;
            
            // Simulate API call
            setTimeout(() => {
